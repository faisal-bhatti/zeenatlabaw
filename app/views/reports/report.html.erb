<%= form_for @report, url: download_reports_path,:html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label "Report Id:", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :rep_id, :class => 'text_field' %>
    <%= f.submit "Download", :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>